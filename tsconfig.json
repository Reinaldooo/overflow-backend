{
  "compilerOptions": {
    "target": "es2017",
    "resolveJsonModule": true,
    "module": "commonjs",
    "lib": ["es6"],
    "outDir": "./dist",
    "rootDir": ".",
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@services/*": ["services/*"],
      "@models/*": ["models/*"],
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"],
      "@providers/*": ["shared/container/providers/*"]
    }
  }
}
